// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int       @id @default(autoincrement())
  createdAt    DateTime? @default(now())
  name         String?
  friends      Friend[]  @relation("Friend")
  messagesTo   Message[] @relation("To User")
  messagesFrom Message[] @relation("From User")
  channels     Channel[] @relation("Channels")

  @@index([id, createdAt(sort: Desc)])
}

model Friend {
  id     Int   @id @default(autoincrement())
  friend User? @relation("Friend", fields: [userId], references: [id])
  userId Int

  @@index([id])
}

model Message {
  id        Int      @unique @default(autoincrement())
  content   String?
  createdAt DateTime @default(now())
  to        User?    @relation("To User", fields: [toUser], references: [id])
  toUser    Int?
  from      User?    @relation("From User", fields: [fromUser], references: [id])
  fromUser  Int?

  @@id([createdAt])
}

model Channel {
  id        Int       @id @default(autoincrement())
  createdAt DateTime? @default(now())
  user      User?     @relation("Channels", fields: [userId], references: [id])
  userId    Int

  @@index([id, createdAt(sort: Desc)])
}
