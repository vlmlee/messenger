// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
    id Int @default(autoincrement()) @id
    createdAt DateTime? @default(now())
    name String?
    messages Message[]
    friends Friend[]
    partyAChannels Channel[] @relation("PartyA")
    partyBChannels Channel[] @relation("PartyB")

    @@index([id, createdAt(sort: Desc)])
}

model Friend {
    id Int @default(autoincrement()) @id
    user User? @relation(fields: [userId], references: [id])
    userId Int

    @@index([id])
}

model Message {
    content String?
    createdAt DateTime @default(now())
    user User? @relation(fields: [userId], references: [id])
    userId Int?
    @@id([createdAt])
}

model Channel {
    id Int @default(autoincrement()) @id
    createdAt DateTime? @default(now())
    partyA User? @relation("PartyA", fields: [partyAUserId], references: [id])
    partyAUserId Int
    partyB User? @relation("PartyB", fields: [partyBUserId], references: [id])
    partyBUserId Int

    @@index([id, createdAt(sort: Desc)])
}