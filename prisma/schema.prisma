// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
    id Int @default(autoincrement()) @id
    createdAt DateTime? @default(now())
    name String?
    friends Friend[]
    messagesTo Message[] @relation("To User")
    messagesFrom Message[] @relation("From User")
    partyAChannels Channel[] @relation("PartyA")
    partyBChannels Channel[] @relation("PartyB")

    @@index([id, createdAt(sort: Desc)])
}

model Friend {
    id Int @default(autoincrement()) @id
    user User? @relation(fields: [userId], references: [id])
    userId Int

    @@index([id])
}

model Message {
    id Int @default(autoincrement()) @unique
    content String?
    createdAt DateTime @default(now())
    from User? @relation("From User", fields: [fromUser], references: [id])
    fromUser Int?
    to User? @relation("To User", fields: [toUser], references: [id])
    toUser Int?
    @@id([createdAt])
}

model Channel {
    id Int @default(autoincrement()) @id
    createdAt DateTime? @default(now())
    partyA User? @relation("PartyA", fields: [partyAUserId], references: [id])
    partyAUserId Int
    partyB User? @relation("PartyB", fields: [partyBUserId], references: [id])
    partyBUserId Int

    @@index([id, createdAt(sort: Desc)])
}