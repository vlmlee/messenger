{
    "compilerOptions": {
        "baseUrl": "./src",
        "jsx": "react",
        "moduleResolution": "Node",
        "paths": {
            "~*": ["./*"]
        },
        "allowJs": true,
        "checkJs": false,
        "strict": true,
        "target": "ES2017",
        "allowSyntheticDefaultImports": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
